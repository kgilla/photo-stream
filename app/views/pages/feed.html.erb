<%= form_with url: root_path, method: :get, local: true do |f| %>
<%= f.label(:user, "Username") %>
<%= f.text_field(:user) %>
<%= f.submit(value: 'Find Photos') %>
<% end %>

<% if @photos %>
<% @photos.each do |p| %>
    <% source = 
    "http://farm#{p.farm}.staticflickr.com/#{p.server}/#{p.id}_#{p.secret}.jpg"%>
  <%= image_tag source %>
<% end %>
<%end%>

